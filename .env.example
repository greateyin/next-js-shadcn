# Authentication
AUTH_SECRET=your-secret-key-here
AUTH_TRUST_HOST=true

# 跨子域 SSO 配置
# Cookie Domain - 设置为父域以支持跨子域共享（如 .example.com）
# 本地开发可以使用 .lvh.me 或留空
COOKIE_DOMAIN=
# 生产环境示例: COOKIE_DOMAIN=.example.com

# 允许的重定向域名（逗号分隔）
# 本地开发示例: ALLOWED_DOMAINS=localhost,auth.lvh.me,admin.lvh.me,dashboard.lvh.me
# 生产环境示例: ALLOWED_DOMAINS=auth.example.com,admin.example.com,dashboard.example.com
ALLOWED_DOMAINS=" # Added by `npx auth`. Read more: https://cli.authjs.dev
AUTH_URL=http://localhost:3000

# ✅ 應用 URL - 用於郵件中的 link 和其他客戶端 URL
# 本地開發: http://localhost:3000
# 生產環境: https://auth.example.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# OAuth Providers
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

AUTH_APPLE_ID=your_apple_service_id_here
AUTH_APPLE_SECRET=your_apple_client_secret_here

LINE_CLIENT_ID=your_line_client_id_here
LINE_CLIENT_SECRET=your_line_client_secret_here

# Database
DATABASE_URL="your_database_url_here"

# Email Service (Resend)
# ✅ API Key from https://resend.com
RESEND_API_KEY=your_resend_api_key_here
# ✅ Verified sender email - use Resend's test domain or your verified domain
# 測試域名: onboarding@resend.dev (已驗證)
# 生產環境: noreply@yourdomain.com (需要在 https://resend.com/domains 驗證)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Development
NODE_ENV="development"
DEFAULT_LOGIN_REDIRECT=/dashboard

# Logging
ELASTICSEARCH_URL=http://localhost:9200
APP_VERSION=1.0.0
LOG_LEVEL=debug # production should use 'info'
NEXT_PUBLIC_CLIENT_SIDE_LOG_ON=true
SERVER_SIDE_LOG_ON=true
NEXT_PUBLIC_LOG_LEVEL=info
#NEXT_PUBLIC_LOG_LEVEL=info|warn|error|debug to control log level
